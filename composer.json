{
    "name": "thtg88/mmcms-demo-api",
    "type": "project",
    "description": "mmCMS Demo API",
    "keywords": [
        "cms",
        "laravel",
        "laravel-framework",
        "laravel6",
        "rest-api",
        "json-api",
        "php"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^1.0",
        "thtg88/mmcms": "^0.5"
    },
    "require-dev": {
        "facade/ignition": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "nunomaduro/larastan": "^0.5.2",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check-style": "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run",
        "fix-style": "vendor/bin/php-cs-fixer fix --using-cache=no",
        "stan": [
            "vendor/bin/phpstan analyse app --memory-limit=256M",
            "vendor/bin/phpstan analyse config --memory-limit=256M",
            "vendor/bin/phpstan analyse resources --memory-limit=256M",
            "vendor/bin/phpstan analyse routes --memory-limit=256M",
            "vendor/bin/phpstan analyse tests --memory-limit=256M"
        ],
        "test": "vendor/bin/phpunit"
    }
}
